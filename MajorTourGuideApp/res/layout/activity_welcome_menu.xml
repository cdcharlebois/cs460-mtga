<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fork" 
    android:background="@color/white">

    <ImageView
        android:id="@+id/picLogo"
        android:layout_width="160dip"
        android:layout_height="160dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:src="@drawable/main_logo" />

    <TextView
        android:id="@+id/lblChoice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/picLogo"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:height="60dp"
        android:text="Please choose your major:" 
        android:textAlignment="gravity"/>

    <LinearLayout
        android:id="@+id/llButtonWrapper1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblChoice"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCIS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:layout_weight="1"
            android:background="@drawable/new_button"
            android:height="80dp"
            android:text="CIS"
            android:textColor="@drawable/button_text"
            android:textSize="40dp" 
            android:width="80dp"/>

        <Button
            android:id="@+id/btnAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:layout_weight="1"
            android:background="@drawable/new_button"
            android:height="80dp"
            android:text="AC"
            android:textColor="@drawable/button_text"
            android:textSize="40dp"
            android:width="80dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llButtonWrapper2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llButtonWrapper1"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnFI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:layout_weight="1"
            android:background="@drawable/new_button"
            android:height="80dp"
            android:text="FI"
            android:textColor="@drawable/button_text"
            android:textSize="40dp"
            android:width="80dip" />

        <Button
            android:id="@+id/btnMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:layout_weight="1"
            android:background="@drawable/new_button"
            android:height="80dp"
            android:text="MK"
            android:textColor="@drawable/button_text"
            android:textSize="40dp"
            android:width="80dip" />
    </LinearLayout>

</RelativeLayout>